' -----------------------------------------------------------------------------'
' INTRO 'RELAPSE'      Cherche la taille minimum pour l'animatø raytracee      '
' -----------------------------------------------------------------------------'
'
RESERVE 10000
a%=MALLOC(1000000)
IF a%=FALSE
  END
ENDIF
FOR t&=FALSE TO 7
  SETCOLOR t&,t&,t&,MIN(7,t&+1)
NEXT t&
'
z%=a%
z2%=a%+50*56*160
FOR t&=1 TO 50
  BLOAD "g:\1\"+"frame"+STR$(t&)+".pi1",XBIOS(2)-34
  BMOVE XBIOS(2)+68*160,z%,56*160
  BLOAD "g:\2\"+"frame"+STR$(t&)+".pi1",XBIOS(2)-34
  BMOVE XBIOS(2)+68*160,z2%,56*160
  ADD z%,56*160
  ADD z2%,56*160
NEXT t&
'
CLS
REPEAT
  VSYNC
  VSYNC
  BMOVE ADD(a%,MUL(t&,56*160)),XBIOS(2)+63*160,56*160
  t&=MOD(ADD(t&,1),99)
UNTIL INP(-2)
'
~MFREE(a%)
